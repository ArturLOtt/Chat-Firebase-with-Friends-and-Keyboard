<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear2ks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/all_profile_imageks"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear3ks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_all_usersks"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:fontFamily="monospace"
                    android:text="user_name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/online_statusks"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/online"
                    android:visibility="invisible" />


            </LinearLayout>


            <TextView
                android:id="@+id/id_all_statusks"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="monospace"
                android:text="user_status"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>